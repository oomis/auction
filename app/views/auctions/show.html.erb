<div class="" style="background-color: white">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-4 order-md-2">

        <!-- Preheading -->
        <h2 class="" style="color: blue;">
          <%= pluralize(@auction.bids.count, 'Bids')%>
        </h2>

        <!-- Heading -->
        <h3 class="mb-4">
          <%= @auction.title %>
        </h3>

        <!-- Text -->
        <p class="mb-5 text-muted">
          <%= @auction.desc %>
        </p>

        <h3>Highest bider</h3>
        <div id="bid_pane">
          <% @bids.limit(1).each do |bid|%>
            <%= render 'bids/highest_bids', bid: bid %>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-md-8 order-md-1">

        <!-- Image -->
        <img src="<%= @auction.image %>" alt="..." class="img-fluid mb-5" style="margin-top: 20px;">

        <!-- Nav -->
        <nav class="nav nav-tabs mb-5">
          <a href="#bids" class="nav-item nav-link active" data-toggle="tab">
            Place Bid
          </a>
          <a href="#desc" class="nav-item nav-link" data-toggle="tab">
            All Bids
          </a>
          <a href="#policy" class="nav-item nav-link" data-toggle="tab">
            Description
          </a>
        </nav>

        <!-- Content -->
        <div class="tab-content">
          <div class="tab-pane fade show active" id="bids">





            <% if current_user %>
              <%= form_with model: [@auction, @bid] do |f|%>
                <div class="input-group mb-3">
                  <%= f.text_field :amount, calss: 'form-control'%>
                  <!-- <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2"> -->
                  <div class="input-group-append">
                    <%= f.submit "bid", class: 'btn btn-outline-secondary'%>
                    <!-- <button class="btn btn-outline-secondary" type="button" id="button-addon2">Button</button> -->
                  </div>
                </div>


              <% end %>
            <% else %>
              <p>You need to login before you can bid</p>
            <% end %>
          </div>
          <div class="tab-pane fade" id="desc">
            <div id="bid_pane">
              <% @bids.each do |bid|%>
                <%= render 'bids/bid', bid: bid %>
              <% end %>
            </div>
          </div>
          <div class="tab-pane fade" id="policy">
              <%= @auction.desc %>
          </div>
        </div>

      </div>
    </div> <!-- / .row -->
  </div>
</div>




